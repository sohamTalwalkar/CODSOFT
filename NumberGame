package CodSoftTasks;

import java.util.*;

public class NumberGame {
    public static void main(String []args){
        int randomNumber, guess, wantToPlay;
        Scanner sc= new Scanner(System.in);
        Random rd= new Random();
        for(int i=0; ; i++){
            System.out.println("Welcome to the Number game.\nInstructions:\n1] You can play the game any number of times.\n2] You will get only 25 chances to guess the number.\n3] The number generated by the computer will be between 1 to 100.\nBest of luck!\n");
            randomNumber= rd.nextInt(1, 100);
            for(int j=0; j<25; j++){
                System.out.print("Enter the number you want to guess: ");
                guess= sc.nextInt();
                if(guess== randomNumber){
                    System.out.printf("Correct! You have guessed the number with a score of %d out of 25.\n", (25-j));
                    break;
                } else if(guess> randomNumber){
                    System.out.println("Too high!");
                } else if(guess< randomNumber){
                    System.out.println("Too low!");
                } 
                if(i== 24){
                    System.out.println("You could not guess the number in 25 chances! Try playing the game again.");
                }
            }
            System.out.println("Do you want to play the game again? Type 1 for playing again or 0 for exit.");
            wantToPlay= sc.nextInt();
            if(wantToPlay== 0){
                System.out.println("Game Terminated.\nThank you for playing the game!");
                break;
            }
        }
        sc.close();
    }
}
